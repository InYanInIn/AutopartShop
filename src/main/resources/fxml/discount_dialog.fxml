<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="300" spacing="15" style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-radius: 8px; -fx-background-radius: 8px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.autopartshop.controller.DiscountDialogController">

    <Label style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="Enter discount(%)" />

    <TextField fx:id="discountField" promptText="Discount" style="-fx-pref-height: 35px; -fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
    <Label fx:id="errorLabel" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50; -fx-background-color: #ff626b; -fx-padding: 3px; -fx-background-radius: 3px;" text="Invalid Discount!" visible="false" />

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="cancelButton" style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 6px; -fx-pref-width: 80px; -fx-pref-height: 35px;" text="Cancel" />
        <Button fx:id="okButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 6px; -fx-pref-width: 80px; -fx-pref-height: 35px;" text="OK" />
    </HBox>
</VBox>
