<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="720" prefWidth="1080" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-padding: 0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.CatalogController">

    <MenuBar style="-fx-background-color: #dddddd; -fx-text-fill: white;">
        <menus>
            <Menu style="-fx-text-fill: white;" text="Catalog">
                <items>
                    <MenuItem text="Close" />
                </items>
            </Menu>
            <Menu style="-fx-text-fill: white;" text="Dashboard">
                <items>
                    <MenuItem text="Delete" />
                </items>
            </Menu>
            <Menu style="-fx-text-fill: white;" text="Cart">
                <items>
                    <MenuItem text="Close" />
                </items>
            </Menu>
        </menus>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </MenuBar>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Autopart Catalog" />

    <TableView fx:id="tableParts" prefHeight="536" prefWidth="1080" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;">
        <columns>
         <TableColumn fx:id="colCategories" prefWidth="130" text="Category" />
            <TableColumn fx:id="colName" prefWidth="130" text="Name" />
            <TableColumn fx:id="colDescription" prefWidth="200" text="Description" />
            <TableColumn fx:id="colPrice" prefWidth="90" text="Price" />
            <TableColumn fx:id="colStock" prefWidth="90" text="In Stock" />
            <TableColumn fx:id="colAction" prefWidth="100" text="Add to Cart" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
   <Pane prefHeight="111.0" prefWidth="1080.0">
      <children>
         <Button fx:id="viewDetails" layoutX="415.0" layoutY="18.0" prefHeight="60" prefWidth="250" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8px;" text="View AutoPart Details">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
         <Label fx:id="successLabel" layoutX="738.0" layoutY="26.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 12px 18px; -fx-font-size: 14px; -fx-background-radius: 8px;" text="Part was Successfully added to your Cart" visible="false" />
      </children>
   </Pane>
</VBox>
